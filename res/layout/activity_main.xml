<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnLaunchRemoteContactsManager"
            android:id="@+id/btnLaunchremoteContactsManager"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnLaunchOwnContactsManager"
            android:id="@id/btnOwnContactsManager"
            android:layout_below="@+id/btnLaunchremoteContactsManager"
            android:layout_alignLeft="@+id/btnLaunchremoteContactsManager"
            android:layout_marginTop="13dp"
            android:layout_alignRight="@+id/btnLaunchremoteContactsManager"/>

</RelativeLayout>
